{
    "manifest_version": 3,
    "name": "AnkiBot Extension",
    "description": "Help to load anki cards in @AnkiCardBot",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "hello_extensions.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "js": ["scripts/translate.js"],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_idle"
        }
    ]
}